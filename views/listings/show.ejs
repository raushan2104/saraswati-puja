<% layout("/layouts/boilerplate")%>
  <body>
    <!-- cards -->
   <div class="container">
    <h2>Images Gallery</h2>
    <div class="card__container">
      <% for (let listing of allListings) { %>
        <article class="card__article">
          <img src="<%= listing.image %>" alt="image" class="card__img" loading="lazy">
  
          <div class="card__data">
            <!-- <span class="card__description"><%= listing.description %></span> -->
            <h2 class="card__title"><%= listing.title %></h2>
            <a href="/listings/<%=listing._id%>" class="card__button">Read More</a>
          </div>
        </article>
      <% } %>
    </div>
  </div>
  
